<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_background_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:clickable="true"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:id="@+id/ssn_input_panel">
        <TextView android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/ssn_input_text"
                android:paddingLeft="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="4dp"
                android:textSize="@dimen/ssn_normal_font"
                android:textColor="@color/ssn_normal_text"
                android:background="@drawable/ssn_keyboard_input_bg"
                android:layout_marginTop="5dp"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>