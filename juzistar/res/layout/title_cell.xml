<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/page_edg_mar"
              android:paddingRight="@dimen/page_edg_mar"
              android:paddingTop="@dimen/small_padding"
              android:paddingBottom="@dimen/small_padding"
              android:minHeight="44dp"
              android:gravity="center_vertical"
              android:background="@drawable/press_white_bg"
              android:descendantFocusability="blocksDescendants"
              android:weightSum="1">
    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="2dp"
               android:layout_marginBottom="2dp"
               android:layout_marginRight="@dimen/bmid_padding"
               android:scaleType="fitCenter"
               android:id="@+id/image_view"/>
    <TextView android:id="@+id/title_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/normal_text"
              android:textSize="@dimen/normal_font"
              android:gravity="left"
              android:layout_marginRight="@dimen/page_edg_mar"
              android:lines="1"
              android:ellipsize="end"
              android:text=""/>
    <include layout="@layout/ssn_horizontal_fill"/>
    <TextView android:id="@+id/sub_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/ssn_assist_text"
              android:textSize="@dimen/normal_small_font"
              android:gravity="right"
              android:layout_marginLeft="6dp"
              android:layout_marginRight="20dp"
              android:lines="1"
              android:ellipsize="start"
              android:text=""/>
</LinearLayout>