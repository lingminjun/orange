<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:gravity="center|left">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="6dp"
                  android:paddingBottom="6dp"
                  android:id="@+id/message_content_panel"
                  android:clickable="true"
                  android:gravity="center_vertical"
                  android:background="@drawable/press_corner_transparent_bg">
        <ImageView android:id="@+id/icon_image"
                   android:layout_width="@dimen/user_icon_size"
                   android:layout_height="@dimen/user_icon_size"
                   android:background="@drawable/btn_red_circle_bg"
                   android:scaleType="fitCenter"/>
        <TextView android:id="@+id/title_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@android:color/transparent"
                  android:textColor="@color/white"
                  android:textSize="@dimen/normal_font"
                  android:gravity="left"
                  android:layout_marginLeft="@dimen/bmid_padding"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:text="标题"/>
    </LinearLayout>
    <TextView android:id="@+id/right_icon"
               android:layout_marginLeft="10dp"
               android:layout_width="@dimen/tag_icon_size"
               android:layout_height="@dimen/tag_icon_size"
               android:textSize="@dimen/ssn_assist_text"
               android:textColor="@color/ssn_white"
               android:gravity="center"
               android:scaleType="fitCenter"/>
</LinearLayout>