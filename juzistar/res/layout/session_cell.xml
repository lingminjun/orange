<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:background="@drawable/press_white_bg"
              android:gravity="center_vertical">
    <RelativeLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="6dp"
                  android:paddingRight="6dp"
                  android:paddingTop="6dp"
                  android:paddingBottom="6dp"
                  android:id="@+id/header_panel">
        <ImageView android:id="@+id/icon_image"
                   android:layout_width="@dimen/user_icon_size"
                   android:layout_height="@dimen/user_icon_size"
                   android:background="@drawable/btn_red_circle_bg"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="1dp"
                   android:layout_centerHorizontal="true"
                   android:scaleType="fitCenter"
                   android:layout_alignWithParentIfMissing="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="@android:color/white"
                  android:id="@+id/badge_label"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:textSize="10sp"
                  android:layout_marginLeft="-8dp"
                  android:layout_marginTop="-2dp"
                  android:layout_alignTop="@+id/icon_image"
                  android:layout_toRightOf="@+id/icon_image"
                  android:visibility="visible"
                  android:background="@drawable/white_stroke_red_bg"
                  android:text="0"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:layout_marginLeft="10dp"
                  android:gravity="center_vertical"
                  android:orientation="vertical">
        <TextView android:id="@+id/name_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/ssn_normal_font"
                  android:textColor="@color/ssn_normal_text"
                  android:lines="1"
                  android:text="明天"
                  android:gravity="left"/>
        <TextView android:id="@+id/message_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/ssn_assist_text"
                  android:textColor="@color/ssn_assist_text"
                  android:lines="1"
                  android:text="明天"
                  android:gravity="left"/>
    </LinearLayout>

</LinearLayout>