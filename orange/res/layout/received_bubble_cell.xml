<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="88dp"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:gravity="center">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="6dp"
                  android:paddingBottom="6dp"
                  android:gravity="center"
                  android:background="@drawable/press_corner_transparent_bg">
        <ImageView android:id="@+id/icon_image"
                   android:layout_width="@dimen/user_icon_size"
                   android:layout_height="@dimen/user_icon_size"
                   android:background="@color/app_style"
                   android:scaleType="fitCenter"/>
        <TextView android:id="@+id/title_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@android:color/transparent"
                  android:textColor="@color/normal_text"
                  android:textSize="@dimen/normal_font"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/page_edg_mar"
                  android:layout_marginRight="@dimen/page_edg_mar"
                  android:lines="1"
                  android:ellipsize="end"
                  android:text="标题"/>
    </LinearLayout>
    <TextView android:layout_width="0dp"
              android:layout_height="1dp"
              android:visibility="invisible"
              android:layout_weight="1"/>
    <ImageView android:id="@+id/right_icon"
               android:layout_width="22dp"
               android:layout_height="22dp"
               android:scaleType="fitCenter"/>
</LinearLayout>